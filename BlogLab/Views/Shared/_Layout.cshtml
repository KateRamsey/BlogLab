<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Surf and Paddle Blog</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top surfheader">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Surf and Paddle Blog", "Index", "BlogPosts", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>

    @RenderBody()

</div>
<div id="footer">
    <footer class="container body-content">
        <p>&copy; @DateTime.Now.Year - Kate Ramsey </p>
    </footer>
</div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
