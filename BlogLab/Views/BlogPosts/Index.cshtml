<div class="container-fluid" id="content">
    <h3 class="currentposttitle col-md-6 col-md-offset-1">@Model.First().Title</h3>
    <h6 class="currentpostauthor col-md-6 col-md-offset-1">@Model.First().Author</h6>
    <h6 class="currentpostdate col-md-6 col-md-offset-1">@Model.First().CreateDate</h6>
    <img class="currentpostimg col-md-6 col-md-offset-1" src=@Model.First().ImageLink />
    <div class="currentpostcontent col-md-6 col-md-offset-1">@Model.First().Body</div>
</div>
    <hr />

    <div class="container-fluid" id="blog">
        @foreach (var item in Model)
        {
            if (item != Model.First())
            {
                <div class="blogimg col-md-3 col-sm-12">
                    <img src=@item.ImageLink class="img-responsive">
                    <div class="blogimgname">@item.Title</div>
                    <a href="/BlogPosts/" @item.Id>
                        <div class="blogimgoverlay">
                        </div>
                    </a>
                </div>
            }
        }
    </div>


